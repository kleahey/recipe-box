<div class="container">
  <%= simple_form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
    <div class="row">
      <div class="col-md-12 col-sm-12">
         <div class="form-group text-center">
           <h4>Change your profile image:</h4>
             <div class="img-circle">
               <%= profile_avatar_select(@user) %>
             </div>
            <%= f.file_field :avatar, onChange: 'loadFile(event)' %>
         </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 offset-lg-1 col-md-10 offset-md-1 col-sm-12">
        <div class="form-group text-center">
          <h4>Update your bio:</h4>
          <%= f.input :bio, as: :bootsy, label: false, input_html: { rows: 5, cols: 80 }, placeholder: "Enter a Short Bio Here" %>
        </div>
      </div>
    </div>
    <div class="form-group text-center">
      <%= f.submit "Update Profile", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
