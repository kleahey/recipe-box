<div class="container">
	<div class="row">
		<div class="col-xl-6 offset-xl-3 col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-xs-10 offset-xs-1">

            <div class="card hovercard">
                <div class="cardheader">

                </div>
                <div class="avatar">
                  <%= profile_avatar_select(@user) %>
                </div>
                <div class="info">
                    <div class="title">
                        <%= @user.user_name %>
                    </div>
                    <div class="desc"><%= @user.first_name %> <%= @user.last_name %></div>
                    <div class="desc"><%= pluralize @user.recipes.count, 'recipe' %></div>
                </div>
                <div class="bottom">
                    <p class="profile-bio"><%= @user.bio.html_safe %></p>
                </div>
            </div>

        </div>

	</div>
  <div class="row">

    <div class="col-xl-6 offset-xl-3 col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-xs-10 offset-xs-1">

      <% if @user == current_user %>
        <%= link_to 'Edit Profile', edit_profile_path(@user.user_name), class: 'btn btn-primary' %>
      <% end %>

    </div>

  </div>
</div>
